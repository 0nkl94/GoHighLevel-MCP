{
  "name": "GoHighLevel-MCP",
  "plugins": ["node"],
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "deploy": {
    "startCommand": "npx ts-node src/index.ts",
    "buildCommand": "npm install"
  },
  "envVars": {
    "GHL_PRIVATE_TOKEN": {
      "required": true
    },
    "GHL_LOCATION_ID": {
      "required": false
    }
  }
}
